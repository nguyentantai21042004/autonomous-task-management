# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-public-domain.com/webhook/telegram

# Memos Configuration
MEMOS_URL=http://localhost:5230
MEMOS_ACCESS_TOKEN=your_memos_access_token_here

# Qdrant Configuration
QDRANT_URL=http://localhost:6333

# Gemini Configuration
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_TIMEZONE="Asia/Ho_Chi_Minh"  # Optional, defaults to Asia/Ho_Chi_Minh

# Voyage AI Configuration (for embeddings)
VOYAGE_API_KEY="your_voyage_api_key_here"

# Google Calendar Credentials (path to your credentials JSON file)
GOOGLE_CALENDAR_CREDENTIALS=google-credentials.json

# Phase 3 Advanced: Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here

# Phase 3 Advanced: Agent Configuration
AGENT_MAX_STEPS=5
AGENT_TEMPERATURE=0.3
AGENT_MAX_OUTPUT_TOKENS=1024

# Phase 3 Advanced: RAG Configuration
RAG_MAX_TASKS_IN_CONTEXT=5
RAG_MAX_CHARS_PER_TASK=800

# Phase 3 Advanced: Webhook Sync Configuration
SYNC_MAX_RETRIES=3
SYNC_INITIAL_BACKOFF=2s
SYNC_MAX_BACKOFF=30s

# Optional: Custom ports (if you want to override)
# MEMOS_PORT=5230
# QDRANT_HTTP_PORT=6333

